{
  "name": "cads-journey-tests",
  "version": "0.0.0",
  "description": "",
  "engines": {
    "node": ">=22.13.1"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "aliases": {
    "~": ".",
    "page-objects": "test/page-objects",
    "components": "test/components"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rm -rf allure-results && rm -rf allure-report",
    "test": "npx playwright test --config=playwright.config.ts",
    "format": "prettier --write 'tests/**/*.ts' '**/*.{ts,md,json,config.ts}'",
    "format:check": "prettier --check 'tests/**/*.ts' '**/*.{ts,md,json,config.ts}'",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "lint": "eslint \"tests/**/*.ts\" \"configs/**/*.ts\" \"playwright.config.ts\" \"post-slack-report.ts\"",
    "lint:fix": "eslint \"tests/**/*.ts\" \"configs/**/*.ts\" \"playwright.config.ts\" \"post-slack-report.ts\" --fix",
    "postinstall": "npm run setup:husky",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "report": "allure generate allure-results --single-file --clean",
    "report:publish": "npm run report; ./bin/publish-tests.sh"
  },
  "dependencies": {
    "@de44/dotenv": "0.1.0",
    "@playwright/test": "1.50.1",
    "@types/node": "22.13.1",
    "allure-commandline": "2.32.0",
    "axios": "1.13.5",
    "esm-module-alias": "2.2.1",
    "global-agent": "3.0.0",
    "http-status-codes": "^2.2.0",
    "playwright": "1.50.1",
    "undici": "7.3.0",
    "@estruyf/github-actions-reporter": "1.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-wdio": "8.24.12",
    "husky": "9.1.7",
    "prettier": "3.4.2",
    "typescript": "^5.7.2"
  }
}
